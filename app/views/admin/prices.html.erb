        <td><%= family.generic_cars.first.model_acronym.model  %></td>
        <td><%= family.generic_cars.first.first_generation_year %> -
          <% if !family.generic_cars.first.gen_continues %>
            <%= family.generic_cars.first.last_generation_year %>
          <% else %>
            Año Actual
          <% end %>
         </td>
         <td>
          $<%= family.supplier_codes.first.price %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
