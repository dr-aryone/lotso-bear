<%= form_for(@family) do |f| %>
  <% if @family.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@family.errors.count, "error") %> prohibited this family from being saved:</h2>

      <ul>
      <% @family.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, value: @mold.name %>
   </div>
   <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </div>

<% i=0 %>
  <%= f.fields_for :family_generic_spare_alloys do |alloy| %>
    <%= alloy.fields_for :generic_spare do |generic_spare| %>
      <br>
      <%= @mold.mold_components[i].name %>
      <%= generic_spare.label :name %>
      <%= generic_spare.text_field :name %>
    <% i+=1 %>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
