<h3>Siniestro</h3>
<div class="form-group">
  <%= builder.label :number, "Número de Siniestro" %>
  <%= builder.text_field :number %>
</div>

<div class="form-group">
  <%= builder.label :policy, "Número de Póliza" %>
  <%= builder.text_field :policy %>
</div>

<div class="form-group">
  <%= builder.label :subsection, "Sub-Indice" %>
  <%= builder.text_field :subsection %>
</div>

<div class="form-group">
  <%= builder.label :expedition_date, "Fecha de Expedición" %>
  <%= builder.date_field :expedition_date, :value => Time.now.strftime('%Y-%m-%d') %>
</div>


<div class="form-group">
  <%= builder.label :date, "Fecha del Siniestro" %>
  <%= builder.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %>
</div>


<div class="form-group">
  <%= builder.label :deductible_value, "Valor Deducible" %>
  <%= builder.number_field :deductible_value, step: 'any' %>
</div>

<div class="form-group">
  <%= builder.label :commercial_value, "Valor Comercial" %>
  <%= builder.number_field :commercial_value, step: 'any' %>
</div>

<div class="form-group">
  <%= builder.label :requires_crane, "¿Requiere Grua?" %>
  <%= builder.check_box :requires_crane %>
</div>

<div class="form-group">
  <%= builder.label :collection_status, "Estatus Cobranza" %>
  <%= builder.check_box :collection_status %>
</div>

<div class="form-group">
  <%= builder.label :special_conditions, "Condiciones Especiales" %>
  <%= builder.text_area :special_conditions %>
</div>

<div class="form-group">
  <%= builder.label :third_insured, "¿Tercero Asegurado?" %>
  <%= builder.check_box :third_insured %>
</div>

<div class="form-group">
  <%= builder.label :agent_name, "Nombre del Ajustador" %>
  <%= builder.text_field :agent_name %>
</div>

<div class="form-group">
  <%= builder.label :comment, "Comentario" %>
  <%= builder.text_area :comment %>
</div>
