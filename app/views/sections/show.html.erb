
<p>
  <strong>Code:</strong>
  <%= @section.code %>
</p>

<p>
  <strong>Warehouse:</strong>
  <%= @section.warehouse.branch %>
</p>

<p>
  <strong>Name:</strong>
  <%= @section.name %>
</p>

<h2>Subsecciones</h2>

<table class="table">
	<thead>
		<th>Codigo</th>
		<th>Descripción</th>
		<th>Familias</th>
		<th></th>
	</thead>
	<tbody>
	<% @section.subsections.each do |subsection| %>
		<tr>
			<td><%= subsection.code %></td>
			<td><%= subsection.name %></td>
			<td><%= subsection.stock_families.count %></td>
			<td><%= link_to "Mostrar", subsection_path(subsection),class:"btn btn-info" %></td>
		</tr>
	<% end -%>
	</tbody>
</table>


<%= link_to 'Nueva Sub-sección', new_section_subsection_path(@section.warehouse,@section),class:"btn btn-warning" %>

<%= link_to 'Edit', edit_section_path(@section),class:"btn btn-info" %> |
<%= link_to 'Back', warehouse_sections_path(@section.warehouse),class:"btn btn-default" %>
