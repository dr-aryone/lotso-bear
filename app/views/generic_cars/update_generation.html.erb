<h1>Coches con Generaciones que Continuan</h1>
<table id="genericCars" class="u-full-width">
  <thead>
    <th> Marca </th>
    <th> Modelo </th>
    <th> Tipo </th>
    <th> Generación </th>
    <th> Codigo</th>
    <th></th>
  </thead>
  <tbody>
    <% for car in @generic_cars %>
    <tr>
      <td><%= car.model_acronym.brand.name %></td>
      <td><%= car.model_acronym.model %></td>
      <td><%= car.car_type.full_name %></td>
      <td><%= car.first_generation_year %> -
        <% if !car.gen_continues %>
        <%= car.last_generation_year %>
        <% else %>
        Año Actual
        <% end %>
      </td>
      <td><%= car.code %></td>
      <td><%= link_to 'Editar', edit_generation_generic_car_path(car), class: "button" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
