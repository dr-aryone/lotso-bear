<%= link_to "Imprimir Etiquetas", labels_order_path(@order), :target => "_blank" %>
<table class="table">
<thead>
	<th>Nombre</th>
	<th>Codigo</th>
	<th>Cantidad</th>
	<th>Precio</th>
	<th>Supplier</th>
	<th></th>
</thead>
<tbody>
	<% @order.stock_families.each do |stock| %>
	<tr>
		<td>
			<%= stock.generic_family.name %>
		</td>
		<td><%= stock.code %></td>		
		<td>
			<%= stock.quantity %>
		</td>
		<td>
			<% unless stock.price.blank? %>
				<%= stock.price.entrance %>
			<% end %>
		</td>
		<td>
			<% unless stock.supplier.blank? %>
				<%= stock.supplier.name %>
			<% end %>
		</td>
		<td></td>
	</tr>
	<tr>
		<td></td>
		<td><strong>Nombre</strong></td>
		<td><strong>Codigo</strong></td>
	</tr>
	<% stock.stock_spares.each do |spare| %>
	<tr>
		<td></td>
		<td>g
		<%= spare.generic_spare.name %>
		</td>
		<td><%= spare.code %></td>
		<td></td>
		<td></td>
		<td></td>
	</tr>
	<% end %>
	<% end %>
</tbody>
</table>

